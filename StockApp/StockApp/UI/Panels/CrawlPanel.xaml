<UserControl x:Class="StockApp.UI.Panels.CrawlPanel"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:StockApp.UI.Panels"
			 xmlns:vm="clr-namespace:StockApp.ViewModels"
			 xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<UserControl.DataContext>
		<vm:CrawlPanelViewModel x:Name="viewModel" />
	</UserControl.DataContext>
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal">
			<Button Content="开始"
					Command="{Binding StartCommand}" />
			<Button Content="停止"
					Margin="10,0,0,0"
					Command="{Binding StopCommand}" />
		</StackPanel>
		<Border Grid.Row="1"
				Margin="0,20,0,0"
				BorderThickness="1"
				BorderBrush="Gray">
			<ListView ItemsSource="{Binding MessageList, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}" />
		</Border>
	</Grid>
</UserControl>
